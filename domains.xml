<?xml version="1.0" encoding="UTF-8"?><project basedir="." name="create-domains">	<target name="create-domain-produccion" depends="-configureAnt" >		<create-domain			userName="${OPENSHIFT_PRODUCCION_LOGIN}"			password="${OPENSHIFT_PRODUCCION_PASSWORD}"			domainName="${PRODUCCION_DOMAIN}"			privateKeyFile="${PRODUCCION_PRIVATE_KEY}"		/>	</target>		<target name="create-domain-preproduccion" depends="-configureAnt" >		<create-domain			userName="${OPENSHIFT_PREPRODUCCION_LOGIN}"			password="${OPENSHIFT_PREPRODUCCION_PASSWORD}"			domainName="${PREPRODUCCION_DOMAIN}"			privateKeyFile="${PREPRODUCCION_PRIVATE_KEY}"		/>	</target>			<target name="create-domain-pruebas" depends="-configureAnt" >		<create-domain			userName="${OPENSHIFT_PRUEBAS_LOGIN}"			password="${OPENSHIFT_PRUEBAS_PASSWORD}"			domainName="${PRUEBAS_DOMAIN}"			privateKeyFile="${PRUEBAS_PRIVATE_KEY}"		/>	</target>	<target name="create-domain-desarrollo" depends="-configureAnt" >		<create-domain			userName="${OPENSHIFT_DESARROLLO_LOGIN}"			password="${OPENSHIFT_DESARROLLO_PASSWORD}"			domainName="${DESARROLLO_DOMAIN}"			privateKeyFile="${DESARROLLO_PRIVATE_KEY}"		/>	</target>			<target name="create-domain-log" depends="-configureAnt" >		<create-domain			userName="${OPENSHIFT_LOG_LOGIN}"			password="${OPENSHIFT_LOG_PASSWORD}"			domainName="${LOG_DOMAIN}"			privateKeyFile="${LOG_PRIVATE_KEY}"		/>	</target>	    <macrodef name="create-domain">        <attribute name="userName" />        <attribute name="password"  />        <attribute name="domainName"  />        <attribute name="privateKeyFile"  />        <sequential>			<echo>Creando el dominio "@{domainName}" y clave en la cuenta "@{userName}"  </echo>						<echo>Borrando clave existente</echo>			<removepublickey 				userName="@{userName}" 				password="@{password}" 				publicKeyName="ant_@{domainName}"			/>						<echo>Borrando dominio</echo>			<destroydomain         				userName="@{userName}" 				password="@{password}"				domainName="@{domainName}"				force="true" 			/>						<echo>Creando en @{privateKeyFile} el par de calve publica/privada</echo>			<createkeysrepository     				privateKeyFile="@{privateKeyFile}"			/>						<echo>Anyadiendo las calve publicas a la cuenta de Openshift</echo>			<addpublickey     				userName="@{userName}" 				password="@{password}" 				publicKeyName="ant_@{domainName}" 				publicKeyFile="@{privateKeyFile}.pub"			/>						<echo>Creando el dominio @{domainName}</echo>			<createdomain     				userName="@{userName}" 				password="@{password}" 				domainName="@{domainName}" 							/>			<echo>Finalizado la creacion del dominio</echo>			        </sequential>    </macrodef> </project>