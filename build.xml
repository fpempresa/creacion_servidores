	<target name="deploy-produccion" depends="-configureAnt" >
		<configureserver 
			userName="${OPENSHIFT_PRODUCCION_LOGIN}" 
			password="${OPENSHIFT_PRODUCCION_PASSWORD}" 
			domainName="${PRODUCCION_DOMAIN}" 
			applicationName="${PRODUCCION_APPLICATION}" 
			gitrepository="${GIT_REPOSITORY_APP}" 
			privateKeyFile="${PRODUCCION_PRIVATE_KEY}"
		>	
			<git 
				command="rm" 
				options="pom.xml"
				dir="@{gitlocalpath}"
				failerror="false"
			/>
			<git 
				command="rm" 
				options="-r src"
				dir="@{gitlocalpath}"
				failerror="false"
			/>	
			<copy file="../${APP_NAME}/dist/${APP_NAME}.war" tofile="@{gitlocalpath}/webapps/ROOT.war" overwrite="true" />
			<git 
				command="add " 
				options="*"
				dir="@{gitlocalpath}"
				failerror="false"
			/>
			
		</configureserver>
		
