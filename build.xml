	<target name="deploy-produccion" depends="-configureAnt" >
		<applicationproperty     
			userName="${OPENSHIFT_LOG_LOGIN}" 
			password="${OPENSHIFT_LOG_PASSWORD}"  
			domainName="${LOG_DOMAIN}" 
			applicationName="${LOGSTASH_APPLICATION}"  
			name="SSH_HOST" 
			applicationProperty="SSHHost"
		/>
		<applicationproperty     
			userName="${OPENSHIFT_LOG_LOGIN}" 
			password="${OPENSHIFT_LOG_PASSWORD}"  
			domainName="${LOG_DOMAIN}" 
			applicationName="${LOGSTASH_APPLICATION}"
			name="SSH_USER" 
			applicationProperty="SSHUser"
		/>

		<configureserver 
			userName="${OPENSHIFT_PRODUCCION_LOGIN}" 
			password="${OPENSHIFT_PRODUCCION_PASSWORD}" 
			domainName="${PRODUCCION_DOMAIN}" 
			applicationName="${PRODUCCION_APPLICATION}" 
			gitrepository="${GIT_REPOSITORY_APP}" 
			privateKeyFile="${PRODUCCION_PRIVATE_KEY}"
		>	
			<trycatch property="exception" >
				<try>
					<removeenvironmentvariable 
						userName="@{userName}" 
						password="@{password}" 
						domainName="@{domainName}" 
						applicationName="@{applicationName}"  
						environmentVariableName="NEW_RELIC_LICENSE_KEY" 
					/>
				</try>
				<catch>
					<echo>No se pudo borrar la variable de entorno NEW_RELIC_LICENSE_KEY</echo>
				</catch>
			</trycatch>
		
			<addenvironmentvariable     
				userName="@{userName}" 
				password="@{password}" 
				domainName="@{domainName}" 
				applicationName="@{applicationName}"  
				environmentVariableName="NEW_RELIC_LICENSE_KEY" 
				environmentVariableValue="${NEW_RELIC_LICENSE_KEY}"
			/>		
		
			<git 
				command="rm" 
				options="pom.xml"
				dir="@{gitlocalpath}"
				failerror="false"
			/>
			<git 
				command="rm" 
				options="-r src"
				dir="@{gitlocalpath}"
				failerror="false"
			/>	
			<copy file="../${APP_NAME}/dist/${APP_NAME}.war" tofile="@{gitlocalpath}/webapps/ROOT.war" overwrite="true" />
			<copy file="${LOG_PRIVATE_KEY}" todir="@{gitlocalpath}/.openshift/action_hooks/logstash" overwrite="true" />
			<echo file="@{gitlocalpath}/.openshift/action_hooks/logstash/ssh-redis.txt" force="true">${SSH_USER}@${SSH_HOST}</echo>			
			<git 
				command="add " 
				options="*"
				dir="@{gitlocalpath}"
				failerror="false"
			/>
			
		</configureserver>

		
	
	
		
	</target>
	
