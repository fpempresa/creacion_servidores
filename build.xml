	<target name="create-server-desarrollo" depends="-configureAnt" >
	
		<removeallpublickeys 
			userName="${OPENSHIFT_DESARROLLO_LOGIN}" 
			password="${OPENSHIFT_DESARROLLO_PASSWORD}"  
		/>
		<destroyalldomains     
			userName="${OPENSHIFT_DESARROLLO_LOGIN}" 
			password="${OPENSHIFT_DESARROLLO_PASSWORD}" 
			force="true" 
		/>
	
		<createkeypair     
			privateKeyFile="${DESARROLLO_PRIVATE_KEY}"
		/>
		<updatekeysrepository />
		
		<addpublickey     
			userName="${OPENSHIFT_DESARROLLO_LOGIN}" 
			password="${OPENSHIFT_DESARROLLO_PASSWORD}" 
			publicKeyName="ant" 
			publicKeyFile="${DESARROLLO_PUBLIC_KEY}"
		/>
		<createdomain     
			userName="${OPENSHIFT_DESARROLLO_LOGIN}" 
			password="${OPENSHIFT_DESARROLLO_PASSWORD}" 
			domainName="${DESARROLLO_DOMAIN}" 
			
		/>

		<createapplication     
			userName="${OPENSHIFT_DESARROLLO_LOGIN}" 
			password="${OPENSHIFT_DESARROLLO_PASSWORD}" 
			domainName="${DESARROLLO_DOMAIN}" 
			applicationName="${JENKINS_APPLICATION}"  
			cartridgeName="jenkins"
			gearProfileName="small"
			scalable="false"
		/>


		<applicationproperty     
			userName="${OPENSHIFT_DESARROLLO_LOGIN}" 
			password="${OPENSHIFT_DESARROLLO_PASSWORD}"  
			domainName="${DESARROLLO_DOMAIN}" 
			applicationName="${JENKINS_APPLICATION}"  
			name="SSH_HOST" 
			applicationProperty="SSHHost"
		/>
		<applicationproperty     
			userName="${OPENSHIFT_DESARROLLO_LOGIN}" 
			password="${OPENSHIFT_DESARROLLO_PASSWORD}"  
			domainName="${DESARROLLO_DOMAIN}" 
			applicationName="${JENKINS_APPLICATION}"  
			name="SSH_USER" 
			applicationProperty="SSHUser"
		/>
		<applicationproperty     
			userName="${OPENSHIFT_DESARROLLO_LOGIN}" 
			password="${OPENSHIFT_DESARROLLO_PASSWORD}"  
			domainName="${DESARROLLO_DOMAIN}" 
			applicationName="${JENKINS_APPLICATION}"  
			name="SSH_PORT" 
			applicationProperty="SSHPort"
		/>		

		<!-- Mostrar el usuario y la contraseÃ±a de Jenkins -->
		<sshexec 
			host="${SSH_HOST}"
			username="${SSH_USER}"
			port="${SSH_PORT}"
			keyfile="${DESARROLLO_PRIVATE_KEY}"
			command="env | grep JENKINS_USERNAME" trust="true"
		/>
		<sshexec 
			host="${SSH_HOST}"
			username="${SSH_USER}"
			port="${SSH_PORT}"
			keyfile="${DESARROLLO_PRIVATE_KEY}"
			command="env | grep JENKINS_PASSWORD" trust="true"
		/>			

		
		
